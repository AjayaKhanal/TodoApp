@model TodoApp.ViewModel.UserViewModel
@{
	ViewData["Title"] = "Register";
	Layout = null;
}
<link rel="stylesheet" type="text/css" href="~/css/register.css" />
<script src="https://ajax.microsoft.com/ajax/jquery/jquery-1.10.2.js" type="text/javascript"></script>
<script src="~/js/theme.js"></script>

<div class="register-container">
	<form asp-controller="User" asp-action="Register" method="post" class="reg-form animate-slide-in">
		<h2>Register</h2>
		<div class="form-group">
			<label asp-for="Username"></label>
			<input asp-for="Username" class="form-control" required />
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Email"></label>
			<input asp-for="Email" class="form-control" required />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Password"></label>
			<input asp-for="Password" type="password" class="form-control" required />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="ConfirmPassword"></label>
			<input asp-for="ConfirmPassword" type="password" class="form-control" required />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-reg">Register</button>
		</div>
		<div class="form-group rlogin">
			<a asp-controller="User" asp-action="Login" >Already have an account? <span>Login here</span></a>
		</div>
	</form>
</div>

@if (TempData["Message"] != null)
{
	@await Html.PartialAsync("../Shared/_Message.cshtml")

}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/theme.js"></script>
	<script>
		document.addEventListener("DOMContentLoaded", function () {
			setTimeout(function () {
				const partialView = document.getElementById("message-box");
				if (partialView) {
					partialView.classList.add("fade-out"); // Add fade-out class
					setTimeout(() => partialView.style.display = "none", 1000); // Hide after fade-out
				}
			}, 2000);
		});
	</script>
}
