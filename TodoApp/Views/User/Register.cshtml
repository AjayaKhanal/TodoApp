@model TodoApp.ViewModel.UserViewModel
@{
	ViewData["Title"] = "Register";
	Layout = "_Layout";
}
<link rel="stylesheet" type="text/css" href="~/css/register.css" />

<div class="register-container">
	<form asp-controller="User" asp-action="Register" method="post" class="reg-form animate-slide-in">
		<h2>Register</h2>
		<div class="form-group">
			<label asp-for="Username"></label>
			<input asp-for="Username" class="form-control" required />
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Email"></label>
			<input asp-for="Email" class="form-control" required />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Password"></label>
			<input asp-for="Password" type="password" class="form-control" required />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="ConfirmPassword"></label>
			<input asp-for="ConfirmPassword" type="password" class="form-control" required />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-reg">Register</button>
		</div>
		<div class="form-group rlogin">
			<a asp-controller="User" asp-action="Login" >Already have an account? <span>Login here</span></a>
		</div>
	</form>
</div>

@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
