@model TodoApp.ViewModel.UserViewModel

@{
	ViewData["Title"] = "Login";
	Layout = "_Layout";
}

<link rel="stylesheet" type="text/css" href="~/css/login.css" />
<div class="login-container">
	<form method="post" asp-controller="User" asp-action="Login" class="login-form animate-slide-in">
		<h2>Login</h2>
		<div class="form-group">
			<label asp-for="Email">Email</label>
			<input type="email" asp-for="Email" class="form-control" required />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Password">Password</label>
			<input type="password" asp-for="Password" class="form-control" required />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-login">Login</button>
		<div class="form-group lreg">
			<a asp-controller="User" asp-action="Register">Don't have an account? <span>Register here</span></a>
		</div>
	</form>
</div>

@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}