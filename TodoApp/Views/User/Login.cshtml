@model TodoApp.ViewModel.LoginViewModel

@{
	ViewData["Title"] = "Login";
	Layout = null;
}

<link rel="stylesheet" type="text/css" href="~/css/login.css" />
<script src="https://ajax.microsoft.com/ajax/jquery/jquery-1.10.2.js" type="text/javascript"></script>
<script src="~/js/theme.js"></script>
<div class="login-container">
	<form method="post" asp-controller="User" asp-action="Login" class="login-form animate-slide-in">
		<h2>Login</h2>
		<div class="form-group">
			<label asp-for="Email">Email</label>
			<input type="email" asp-for="Email" class="form-control" required />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Password">Password</label>
			<input type="password" asp-for="Password" class="form-control" required />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-login">Login</button>
		<div class="form-group lreg">
			<a asp-controller="User" asp-action="Register">Don't have an account? <span>Register here</span></a>
		</div>
	</form>
</div>

@if (TempData["Message"] != null)
{
	@await Html.PartialAsync("../Shared/_Message.cshtml")
	
}

@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
	<script src="~/js/theme.js"></script>
	<script>
		document.addEventListener("DOMContentLoaded", function () {
			setTimeout(function () {
				const partialView = document.getElementById("message-box");
				if (partialView) {
					partialView.classList.add("fade-out"); // Add fade-out class
					setTimeout(() => partialView.style.display = "none", 1000); // Hide after fade-out
				}
			}, 2000);
		});
	</script>
}
