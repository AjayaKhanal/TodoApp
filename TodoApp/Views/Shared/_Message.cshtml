<div class="message-box" id="message-box">
	<div class="message @TempData["Info"]">
		<p>@TempData["Message"]</p>
	</div>
</div>
<script>
	setTimeout(function () {
					const partialView = document.getElementById("message-box");
					if (partialView) {
						partialView.classList.add("fade-out"); // Add fade-out class
						setTimeout(() => partialView.style.display = "none", 1000); // Hide after fade-out
					}
				}, 2000);
</script>
<style>

	.message-box{
		position: relative;
		top: 20px;
		right: 20px;
		z-index: 1000;
	}
	.message{
		padding: 10px 0 5px 10px;
	}

	.message p{
			font-weight: bold;
			align-content: center;
			font-size: large;
	}

	.Success{
		background-color: #155724;
		color: #d4edda;
		border-color: #c3e6cb;
	}

	.Danger{
		background-color: #721c24;
		color: #f8d7da;
		border-color: #f5c6cb;
	}

	.Info {
		background-color: #004085;
		color: #cce5ff;
		border-color: #b8daff;
	}
	.Warning{
		background-color: #856404;
		color: #fff3cd;
		border-color: #ffeeba;
	}

	.fade-out {
		transition: opacity 1s ease-out;
		opacity: 0;
	}
</style>